
{{#if gym}}


  <section class="col-md-12">
    <div class="row">
        <div class="col-md-3">
            <div class="home-card mdl-card mdl-shadow--2dp">
              <img src="{{gym.coverPhoto}}" class="gym-photo" />
            </div>
        </div>

        <div class="col-md-9">
          <div class="home-card mdl-card mdl-shadow--2dp">
            <div class="row">
              <div class="col-md-6">
                <h1>  {{gym.name}} </h1>
                  <div class="mdl-card__supporting-text">
                    {{gym.phone}} | {{ gym.email }} | {{gym.website}}
                  </div>
              </div>

              <div class="col-md-6">
                  <a href="/karnety/add/{{gym.id}}" class="sub-button">
                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Buy subscription card</button>
                  </a>
              </div>
            </div>

            </div>
        </div>
    </div>
    </section>

    {{/if}}
